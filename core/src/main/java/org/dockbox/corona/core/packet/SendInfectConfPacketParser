package org.dockbox.corona.core.packet;

import org.dockbox.corona.core.models.SendInfectConfPacket;
import org.dockbox.corona.core.util.CommonUtil;

public class SendInfectConfPacketParser extends PacketParser<SendInfectConfPacket> {

    @Override
    public String serialize(SendInfectConfPacket model) {
        return new StringBuilder()
                .append("ID=").append(model.getId())
                .append("\nTIMESTAMP_CONTACT_SENT=").append(CommonUtil.parseTimeString(model.getContactSent()))
                .toString();
    }

    @Override
    public SendInfectConfPacket deserialize(String message) {
        String[] lines = message.split("\n");
        SendInfectConfPacket.Builder builder = new SendInfectConfPacket.Builder();
        for (String line : lines) {
            String[] keyValue = line.split("=");
            String key = keyValue[0];
            String value = keyValue[1];

            switch (key) {
                case "ID":
                    builder.withId(value);
                    break;
                case "TIMESTAMP_CONTACT_SENT":
                    builder.withContactSent(CommonUtil.parseTime(value));
                    break;
                default:
                    throw new IllegalArgumentException("Incorrect packet format");
            }
        }

        return builder.build();
    }

}